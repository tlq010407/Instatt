<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="6dp"
    android:elevation="6dp"
    app:cardUseCompatPadding="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@drawable/rounded_background"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/textViewStartTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="11:00"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:layout_alignParentStart="true"/>
        <TextView
            android:id="@+id/textViewEndTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "13:00"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:layout_toEndOf="@id/textViewStartTime"
            android:layout_marginStart="8dp"
            android:layout_alignTop="@id/textViewStartTime"/>

    <TextView
        android:id="@+id/textViewDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="26-09-2023 Tuesday"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:layout_below="@id/textViewStartTime"/>

    <TextView
        android:id="@+id/textViewType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lecture"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:layout_toEndOf="@id/textViewEndTime"
        android:layout_marginStart="8dp"
        android:layout_alignTop="@id/textViewEndTime"/>

    <TextView
        android:id="@+id/textViewRoom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BB80"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:layout_toEndOf="@id/imageViewDirection"
        android:layout_marginStart="2dp"
        android:layout_alignTop="@id/textViewStartTime"/>

        <ImageView
            android:id="@+id/imageViewDirection"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/textViewType"
            android:src="@drawable/baseline_location_on_24" />


        <ImageButton
            android:id="@+id/status_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@drawable/rounded_background"
            android:src="@drawable/user_times" />

        <TextView
            android:id="@+id/statusView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/status_icon"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="Report"
            android:textColor="@color/white"
            android:textSize="18dp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>